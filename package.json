{
  "name": "scope",
  "displayName": "Scope",
  "description": "",
  "version": "0.0.1",
  "publisher": "shagabutdinov",
  "repository": "https://github.com/shagabutdinov/vscode-scope",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:scope.check",
    "onCommand:scope.selections.isSingle"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scope.check",
        "title": "Scope: Check"
      },
      {
        "command": "scope.selections.isSingle",
        "title": "Scope: Is active editor has single selection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile-grammar": "pegjs -o src/extension/grammar.js src/extension/grammar.pegjs",
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.25",
    "@types/vscode": "^1.43.0",
    "glob": "^7.1.4",
    "mocha": "^7.1.1",
    "source-map-support": "^0.5.12",
    "tslint": "^5.16.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.149",
    "lodash": "^4.17.15",
    "pegjs": "^0.10.0"
  }
}
